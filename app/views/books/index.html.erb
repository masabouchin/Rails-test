<div class="succses-bar">
  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
 </div>

<header>
    <h2><strong>Books</strong></h2>
  </header>

<main class="mainbox">
    <section class="bookboxs">
      <div class="book-box">
        <% @books.each do |book| %>
          <div class="book-item clearfix">
            <section class="Book-text">
              <table>
               <tr>
                <th>Title</th>
                 <th>Body</th>
                  <th colspan="3"></th>
                </tr>
                <tr>
                <td class="Book-text-headline"><%= book.title %></td>
                <td class="Book-body"><%= book.body %></td>
              <td class="book-item-edit1"><%= link_to "Show",book_path(book) %></td>
              <td class="book-item-edit2"><%= link_to "Edit",edit_book_path(book)%></td>
              <td class="book-item-edit3"><%= link_to "Destroy",book_path(book),method: :delete , "data-confirm"=> "Are you sure?" %></td>
              </table>
          </div>
        <% end %>
      </div>
    </section>
  </main>

<div class="create-bar">
  <section class="createbox">
    <h2 class="sidebar-headline"><strong>New book</strong></h2>
      <div class="createbox-contents">
      <%= form_for(@book) do |f| %>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this book from being saved:
          <%= @book.errors.full_messages.each do |msg|%>
            <%= msg %>
          <% end %>
        <% end %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Body</p>
        <%= f.text_area :body  %><br>
        <%= f.submit 'Create Book'%>
     <% end %> 
    </div>
  </section>
</div>
</main>


